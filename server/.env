# 数据库配置
DB_TYPE=mongodb
MONGODB_URI=mongodb://127.0.0.1:27017/baoming
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=baoming

# 应用配置
PORT=3000
NODE_ENV=development
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# 支付配置 (示例配置，根据实际需要修改)
WECHAT_APPID=your-wechat-appid
WECHAT_MCHID=your-wechat-mchid
WECHAT_SECRET=your-wechat-secret
WECHAT_NOTIFY_URL=http://localhost:3000/api/payment/notify/wechat

ALIPAY_APPID=your-alipay-appid
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_NOTIFY_URL=http://localhost:3000/api/payment/notify/alipay

# 性能配置
PERFORMANCE_SLOW_THRESHOLD=1000
PERFORMANCE_LOG_ALL=false
CACHE_DEFAULT_TTL=300
ENABLE_MEMORY_CACHE=true
CACHE_MAX_ITEMS=1000
DB_SLOW_QUERY_THRESHOLD=200
DB_LOG_ALL_QUERIES=false
DB_ENABLE_QUERY_CACHE=true
DB_BATCH_SIZE=100 