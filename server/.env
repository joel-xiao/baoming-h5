# 服务器配置
PORT=3001
HOST=localhost
NODE_ENV=development

# 应用信息
APP_NAME=团队报名平台
APP_VERSION=1.0.0

# 数据库配置
DB_URI=mongodb://127.0.0.1:27017/baoming

# JWT配置
JWT_SECRET=default_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# 微信支付配置
PAYMENT_PROVIDER=wechat
PAYMENT_APP_ID=你的微信APPID
PAYMENT_MCH_ID=你的微信商户号
PAYMENT_SERIAL_NUMBER=你的证书序列号
PAYMENT_NOTIFY_URL=https://你的域名/api/payment/notify
# 开发环境设置为true可使用模拟数据
PAYMENT_MOCK=true

# 功能开关
FEATURE_OFFLINE_STORAGE=true
FEATURE_DATA_EXPORT=true

# 日志配置
LOG_LEVEL=info
LOG_TO_FILE=false 